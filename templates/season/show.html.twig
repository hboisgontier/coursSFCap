{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block main %}
    <h1>Season</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>FirstAirDate</th>
                <td>{{ season.firstAirDate ? season.firstAirDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Overview</th>
                <td>{{ season.overview }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ season.poster }}</td>
            </tr>
            <tr>
                <th>TmdbId</th>
                <td>{{ season.tmdbId }}</td>
            </tr>
            <tr>
                <th>DateCreated</th>
                <td>{{ season.dateCreated ? season.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateModified</th>
                <td>{{ season.dateModified ? season.dateModified|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_season_index') }}">back to list</a>

    <a href="{{ path('app_season_edit', {'id': season.id}) }}">edit</a>

    {{ include('season/_delete_form.html.twig') }}
{% endblock %}
