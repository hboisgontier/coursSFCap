{% extends 'base.html.twig' %}

{% block title %}
    {{ serie.name }} | {{ parent() }}
{% endblock %}

{% block main %}
    <h2>{{ serie.name }}</h2>
    {% if(is_granted('ROLE_ADMIN')) %}
        <form action="{{ path('serie_delete', {'id': serie.id}) }}" method="POST">
            <input type="submit" value="Delete this serie">
        </form>
    {% endif %}
    <p>{{ serie.overview }}</p>
    {% for season in serie.seasons %}
        <h3>Season #{{ season.number }}</h3>
        {% if(season.overview) %}
            <p>{{ season.overview }}</p>
        {% endif %}
    {% endfor %}
{% endblock %}