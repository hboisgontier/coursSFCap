{%  extends 'base.html.twig' %}

{% block title %}
Login
{% endblock %}

{% block main %}
    {% if errors %}
        <div>{{ errors.messageKey|trans(errors.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="{{ lastLogin }}"/>

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password"/>

        <input type="checkbox" name="_remember_me" id="remember_me">
        <label for="remember_me">Keep me logged in</label>

        {# CSRF protection #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="_target_path" value="/test/yo"/>

        <button type="submit">login</button>
    </form>

{% endblock %}